{
	"name": "softtouch/api",
	"description": "The SoftTouch API",
	"keywords": ["softtouch", "api", "laravel"],
	"license": "proprietary",
	"type": "project",
	"authors": [
		{
			"name": "Koen Betsens",
			"email": "koen@cloudoki.com",
			"homepage": "http://www.cloudoki.com",
			"role": "Architect"
		}
	],
	"require": {
		"laravel/framework": "4.2.*",
		"guzzlehttp/guzzle": "~4.0",
		"jlapp/swaggervel": "dev-master",
		"koenbetsens/jobserver": "dev-master"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
